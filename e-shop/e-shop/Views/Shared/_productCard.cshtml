@model Sweet 

<div class="col-sm-4 col-lg-4 col-md-4 ">
    <div class="thumbnail">
        <img src="@Model.ImageThumbNailUrl" alt="@Model.Name" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h2><a asp-controller="Sweet" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a></h2>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.Id">Add to Cart</a>
            </p>
        </div>
    </div>
</div>
