@model ShoppinCartViewModel

@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
    {
        <li>
            <a>
                <span class="glyphicon-shopping-cart"></span>
                <span id="cart-status">
                    @Model.ShoppingCart.ShoppingCartItems.Count 
                </span>
            </a>
        </li>
    } 
else
            {
                <span>No items currently in basket</span>
            }
